{
  "version": 2,
  "env": {
    "FORCE_REBUILD": "1724254320",
    "NODE_ENV": "production"
  },
  "functions": {
    "api/chat.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/upload-audio.js": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "rewrites": [
    { "source": "/refs/out/(.*)", "destination": "/public/refs/out/$1" },
    { "source": "/refs/(.*)", "destination": "/public/refs/$1" },
    { "source": "/lib/(.*)", "destination": "/lib/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/public/landing.html" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=0" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    },
    {
      "source": "/lib/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}