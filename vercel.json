{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**",    "use": "@vercel/static" },
    { "src": "refs/out/**",  "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/refs/out/(.*)", "destination": "/public/refs/out/$1" },
    { "source": "/api/(.*)",     "destination": "/api/$1.js" },
    { "source": "/",             "destination": "/public/landing.html" },
    { "source": "/(.*)",         "destination": "/public/$1" }
  ]
}